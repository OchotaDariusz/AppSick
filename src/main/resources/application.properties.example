spring.mvc.pathmatch.matching-strategy = ANT_PATH_MATCHER

spring.datasource.url=jdbc:postgresql://localhost:5432/DBNAME
spring.datasource.username=USER
spring.datasource.password=PASSWORD
# jpa params
# korzystam z istniej?cej struktury - nie jest za ka?dym razem tworzona na nowo
spring.jpa.hibernate.ddl-auto=create-drop
spring.jpa.defer-datasource-initialization=true
# wy?wietlanie w konsoli zapyta? SQL
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQL81Dialect
spring.sql.init.mode=always

#secutiry
appsick.jwtCookieName= appsick
appsick.jwtSecret= appSickSecretKey
appsick.jwtExpirationMs= 11160000

#email
spring.mail.host=EMAIL_HOST
spring.mail.port=587
spring.mail.username=EMAIL_USER
spring.mail.password=EMAIL_PASS
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true